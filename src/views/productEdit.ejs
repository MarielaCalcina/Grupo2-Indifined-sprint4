<%- include ("partials/head") %> 
<%- include("partials/header") %> 
<main class="product-edit">
    <section class="titulos"><h2>Modificar producto</h2></section>
    
    <section class="forms">
        
        <form action="/" method="post">
            <div>
                <label for="id-product" value="id-product">ID de producto a modificar:<input type="text" name="id-product" required></label>
            </div>
            <div>
                <label for="name-product" value="name-product">Nombre:<input type="text" name="name-product" required></label>
            </div>
            <div class="product-desc"> 
                <label for="description-product">Descripción:</label>
                <textarea minlength="4" name="description-product" required></textarea>
            </div>  
            <div>
                <label for="category-product">Categoría:</label>
                <select name="category-product" id="prod-category">
                    <option value="remeras"selected> Remeras</option>
                    <option value="abrigos">Abrigos</option>
                    <option value="pantalones">Pantalones</option>
                    <option value="accesorios">Accesorios</option>
                </select>
            </div>
            <div>
                <label for="size-product">Talle: </label>
                <select name="size-product" id="prod-size">
                    <option value="xs" selected>  XS </option>
                    <option value="u">  U </option>
                    <option value="s">  S </option>
                    <option value="m">  M </option>
                    <option value="l">  L </option>
                    <option value="xl"> XL </option>
                </select>
            </div>
            <div>
                <label for="quantity-product">Cantidad: </label>
                <input type="number" name="cantidad-product" required>
            </div>
            <div>
                <label for="colour-product">Color: </label>
                <input type="text" name="colour-product" required>
            </div>
            <div>
                <label for="price-product">Precio: </label>
                <input type="number" name="price-product" required>
            </div>
            <div>
                <label for="discount-product">Descuento: </label>
                <input type="number" name="discount-product" required>
            </div>
            <div>
                <label for="image-product">Imagen:</label>
                <input type="file" name="image-product" accept="image/png" required>
            </div>
            <div class="submit">
                <button type="submit" name="submit">Guardar cambios</button>
            </div>
        </form>
    </section>
</main>
<%- include("partials/footer") %> 